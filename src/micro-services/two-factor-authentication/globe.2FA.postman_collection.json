		{
			"name": "Successfully Generate TOTP",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "812f63ce-3a9e-4c84-af01-ac784df5575e",
						"exec": [
							"pm.test(\"Should successfully return 201\", function () {",
							"    pm.expect(pm.response.code).to.be.equal(201);",
							"});",
							"",
							"pm.environment.set(\"otp\", pm.response.json().otp);",
							"pm.environment.set(\"address\", pm.response.json().address);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"address\":639234567891\n}"
				},
				"url": {
					"raw": "{{host}}/generate/totp",
					"host": [
						"{{host}}"
					],
					"path": [
						"generate",
						"totp"
					]
				}
			},
			"response": []
		},
