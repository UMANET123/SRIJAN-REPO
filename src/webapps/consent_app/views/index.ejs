<!DOCTYPE html>
<html lang="en">

<head>
    <title>Globe consent </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>

<script src="/js/login.js"></script>

<body>
    <header>
        <div class="header-wrap container">
            <div class="logo">
                <img src="../images/logo.png" alt="Globe">
            </div>
            <div class="user-details"></div>
        </div>
    </header>
    <main>
        <div class="login-form-container container">
            <div class="login-form-image"></div>
            <div class="login-form">
                <h3>Globe Login</h3>
                <div class="form-fields">
                    <div id="postResultDiv">
                    </div>
                    <div class="form-group">
                        <label for="Phoneno">Phone No:</label>
                        <input type="text" class="form-control" id="phone_no" placeholder="Phone No" />
                        <small id="emailHelp" class="form-text text-muted helper-text">Please enter Globe no. with 0 or 63 in the
                            prefix. e.g - 639953xxxxxx.</small>
                        <input type="hidden" class="form-control" class="generate_otp" id="subscriber_id"
                            placeholder="Subscriber Id" />
                    </div>
                    <div class="form-group">
                        <label for="otp">OTP:</label>
                        <input type="text" class="form-control" id="otp" placeholder="OTP" />
                    </div>
                    <div class="login-actions">
                        <div class="generate-otp">
                            <a href="#" class="generate_otp" id="generate_otp">Generate OTP</a>
                            <a href="#" class="resend_otp" id="resend_otp">Resend OTP</a>
                        </div>
                        <button type="submit" class="btn btn-default" id="verify_otp">Login</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="footer-menu">
            <ul>
                <li>
                    <a href="#">About Us</a>
                </li>
                <li>
                    <a href="#">Help Centre</a>
                </li>
                <li>
                    <a href="#">Blog</a>
                </li>
                <li>
                    <a href="#">Privacy Policy</a>
                </li>
            </ul>
        </div>
    </main>
</body>
